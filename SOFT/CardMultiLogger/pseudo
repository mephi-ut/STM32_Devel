переменные:
таймаут_таймер=0
считывание=0
номер_карты=0b 0 0000 0000 0000 0000 0000 0000 0
бит = 0

старт цикла

если "считывание" = 1 
(
    если таймаут_таймер < 0.5 сек
    (
    таймаут_таймер++
    ) иначе (
    отправка "номер_карты" клиенту
    считывание = 0
    таймаут_таймер = 0
    номер_карты = 0
    бит = 0
    )


)

конец цикла

прерывание "0" 
(
    считывание = 1
    бит++
)

прерывание "1" 
(
    считывание = 1
    запись "1" в "номер карты" со смещением в "бит"
    бит++
)
